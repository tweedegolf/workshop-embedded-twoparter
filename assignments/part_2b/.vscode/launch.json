{
    "version": "0.2.0",
    "configurations": [
        {
            /* Configuration for the nRF52840-DK board */
            "type": "cortex-debug",
            "request": "launch",
            "name": "Flash and Debug nRF52840",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "cargo-build:firmware",
            "runToMain": true,
            "executable": "./firmware/target/thumbv7em-none-eabihf/debug/firmware",
            "device": "nRF52840",
            "svdFile": "${workspaceRoot}/nrf52840.svd",
            "postLaunchCommands": [
                "break rust_begin_unwind", // Break at panic
            ],
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            }
        },
    ],
}