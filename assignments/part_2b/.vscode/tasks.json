{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo-build:firmware",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build", "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
            "options": {
                "cwd": "./firmware"
            }
        },
        {
            "label": "cargo-build:cli",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
            "options": {
                "cwd": "./cli"
            }
        },
        {
            "label": "cargo-build:format",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
            "options": {
                "cwd": "./format"
            }
        },
        {
            "label": "cargo-build:all",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "dependsOn": ["cargo-build:format", "cargo-build:firmware", "cargo-build:cli"],
            "dependsOrder": "sequence",
        },
    ],
}